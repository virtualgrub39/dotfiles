set $BG #06060d
set $FG #f6ebf7
set $INACTIVE #44475a
set $URGENT #ff5555

client.focused $BG $BG $FG #282a36 #f8f8f2
client.unfocused $INACTIVE $INACTIVE $FG
client.urgent $URGENT $URGENT $FG

gaps inner 15

